<div>
  <h1><%= current_user.username %></h1>

  <dt>Private</dt>
  <dd><%= current_user.private %></dd>

  <dt>Followers</dt>
  <dd>
    <%#= current_user.followers.count %>
  </dd>


  <dt>Following</dt>
  <dd><%= current_user.private %></dd>
</div>





<nav>
  <ul>
    <li>
      <a href="/users/:username">Profile</a>
    </li>
    <li>
      <a href="/users/:username/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/:username/feed">Feed</a>
    </li>
    <li>
      <a href="/users/:username/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Discover</h2>


<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
        <tr>
          <td>
            <img src="<%= a_photo.image %>">
          </td>

          <td>
            <%= a_photo.caption %>
          </td>

          <td>
            <%= a_photo.owner_id %>
          </td>

          <td>
            <%= time_ago_in_words(a_photo.created_at) %> ago
          </td>

          <td>
            <%= a_photo.likes_count %>
          </td>

          <td>
            <a href="/photos/<%= a_photo.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
