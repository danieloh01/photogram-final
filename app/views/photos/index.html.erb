<form action="/insert_photo" method="post" class="form-horizontal" enctype="multipart/form-data">
       
  <label for="browser_input_image">
    Image
  </label>

  <input type="file" id="browser_input_image" name="image" placeholder="Enter URL for the image..." class="form-control">

  <label for="caption_box">
    Caption
  </label>

  <textarea id="caption_box" name="query_caption" rows="2" placeholder="Enter a caption for the photo"></textarea>
  
  <button>
    Add photo
  </button>
</form>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
        <% if User.find(a_photo.owner_id).private != true %>
          <tr>
            <td>
              <img src="<%= a_photo.image %>">
            </td>

            <td>
              <%= a_photo.caption %>
            </td>

            <td>
              <%= User.find(a_photo.owner_id).username %>
            </td>

            <td>
              <%= time_ago_in_words(a_photo.created_at) %> ago
            </td>

            <td>
              <%= a_photo.likes_count %>
            </td>

            <td>
              <a href="/photos/<%= a_photo.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
